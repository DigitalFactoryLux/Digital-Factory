---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getLangFromUrl, ogLocales, locales, getLocalizedPath, type Locale } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  locale?: Locale;
}

const { title, description } = Astro.props;
const locale = Astro.props.locale ?? getLangFromUrl(Astro.url);
const canonicalURL = new URL(Astro.url.pathname, 'https://www.digital-factory.lu');
const ogLocale = ogLocales[locale];

// Clean path for hreflang (without locale prefix)
let cleanPath = Astro.url.pathname;
if (locale !== 'fr') {
  cleanPath = cleanPath.replace(`/${locale}`, '') || '/';
}
---

<!doctype html>
<html lang={locale === 'lu' ? 'lb' : locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <link rel="canonical" href={canonicalURL.href} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:site_name" content="Digital Factory" />
    <meta property="og:image" content="https://www.digital-factory.lu/images/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.digital-factory.lu/images/og-image.png" />

    <!-- Hreflang -->
    {locales.map((lang) => (
      <link
        rel="alternate"
        hreflang={lang === 'lu' ? 'lb' : lang}
        href={new URL(getLocalizedPath(cleanPath, lang), 'https://www.digital-factory.lu').href}
      />
    ))}
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(getLocalizedPath(cleanPath, 'fr'), 'https://www.digital-factory.lu').href}
    />

    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <Navbar locale={locale} transition:animate="none" />
    <main class="flex-1 overflow-x-hidden" transition:animate="fade">
      <slot />
    </main>
    <Footer locale={locale} transition:animate="none" />

    <!-- Bandeau cookies RGPD -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 z-50 hidden">
      <div class="bg-gray-900/95 backdrop-blur-sm border-t border-gray-700 px-4 sm:px-6 py-4">
        <div class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
          <p class="text-sm text-gray-300 text-center sm:text-left flex-1">
            Ce site utilise uniquement des cookies techniques nécessaires à son fonctionnement. Aucun cookie de suivi ou publicitaire n'est utilisé.
            <a href="/politique-de-confidentialite" class="text-teal-400 hover:underline ml-1">En savoir plus</a>
          </p>
          <button
            id="cookie-accept"
            class="shrink-0 bg-teal-600 hover:bg-teal-700 text-white text-sm font-medium px-5 py-2 rounded-full transition-colors"
          >
            Compris
          </button>
        </div>
      </div>
    </div>

    <script>
      // Bandeau cookies
      function initCookieBanner() {
        const banner = document.getElementById('cookie-banner');
        const acceptBtn = document.getElementById('cookie-accept');
        if (!banner || !acceptBtn) return;

        if (!localStorage.getItem('cookie-accepted')) {
          banner.classList.remove('hidden');
        }

        acceptBtn.addEventListener('click', () => {
          localStorage.setItem('cookie-accepted', 'true');
          banner.classList.add('hidden');
        });
      }
      initCookieBanner();
      document.addEventListener('astro:after-swap', initCookieBanner);

      // Intersection Observer pour les animations fade-in
      function initObserver() {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible');
              }
            });
          },
          { threshold: 0.1 }
        );

        document.querySelectorAll('.fade-in, .fade-in-left, .fade-in-right, .scale-in').forEach((el) => observer.observe(el));
      }

      // Initialiser au chargement et après chaque navigation
      initObserver();
      document.addEventListener('astro:after-swap', initObserver);
    </script>
  </body>
</html>

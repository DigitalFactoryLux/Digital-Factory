---
interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
  image?: string;
  buttonLabel?: string;
}

const { title, description, icon, href, image, buttonLabel } = Astro.props;
---

<div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
  {image && (
    <div class="mb-6 rounded-xl overflow-hidden">
      <img src={image} alt={title} class="w-full h-48 object-cover" loading="lazy" />
    </div>
  )}

  {icon && (
    <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-mint-100 to-cyan-light flex items-center justify-center mb-5 text-2xl">
      {icon}
    </div>
  )}

  <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
  <p class="text-gray-600 leading-relaxed text-sm">{description}</p>

  {href && buttonLabel && (
    <a href={href} class="btn-primary mt-6 text-sm">
      {buttonLabel}
    </a>
  )}
</div>

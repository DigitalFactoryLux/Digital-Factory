---
interface Props {
  step: string;
  title: string;
  description: string;
}

const { step, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <div class="w-16 h-16 rounded-full bg-gradient-to-br from-mint-200 to-cyan-light flex items-center justify-center mb-5">
    <span class="text-gray-900 font-bold text-sm">{step}</span>
  </div>
  <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
  <p class="text-gray-600 leading-relaxed text-sm max-w-xs">{description}</p>
</div>

---
import { CONTACT, EXTERNAL_LINKS } from '../lib/constants';
import { t, getLocalizedPath, getLangFromUrl, type Locale } from '../i18n/utils';

interface Props {
  locale?: Locale;
}

const locale = Astro.props.locale ?? getLangFromUrl(Astro.url);
const year = new Date().getFullYear();
---

<footer class="relative bg-gray-950 text-white overflow-hidden">
  <!-- Gradient top border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-teal-500 to-transparent"></div>

  <!-- Background decorations -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-teal-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-cyan-500/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

  <div class="relative max-w-7xl mx-auto px-6 md:px-12">
    <!-- Main Footer Content -->
    <div class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">

      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href={getLocalizedPath('/', locale)} class="inline-block mb-5 group">
          <img src="/images/logo.svg" alt="Digital Factory" class="h-10 brightness-0 invert transition-transform duration-300 group-hover:scale-105" />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          {t('footer.description', locale)}
        </p>

        <!-- Social icons -->
        <div class="flex gap-3">
          <a
            href={CONTACT.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="w-10 h-10 rounded-xl bg-gray-800/80 hover:bg-teal-600 flex items-center justify-center text-gray-400 hover:text-white transition-all duration-300 hover:-translate-y-0.5"
          >
            <svg class="w-4.5 h-4.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href={CONTACT.instagram}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="w-10 h-10 rounded-xl bg-gray-800/80 hover:bg-teal-600 flex items-center justify-center text-gray-400 hover:text-white transition-all duration-300 hover:-translate-y-0.5"
          >
            <svg class="w-4.5 h-4.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-5">{t('footer.navigation', locale)}</h3>
        <ul class="space-y-3">
          <li>
            <a href={getLocalizedPath('/', locale)} class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              {t('nav.home', locale)}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/saas', locale)} class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              {t('nav.saas', locale)}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/teeqode', locale)} class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              TEEQODE®
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/kuck', locale)} class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              KUCK®
            </a>
          </li>
        </ul>
      </div>

      <!-- Produits -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-5">{t('nav.products', locale)}</h3>
        <ul class="space-y-3">
          <li>
            <a href={EXTERNAL_LINKS.teeqode} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              teeqode.com
              <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
            </a>
          </li>
          <li>
            <a href={EXTERNAL_LINKS.kuck} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-teal-400 transition-colors text-sm inline-flex items-center gap-2 group">
              <span class="w-1 h-1 rounded-full bg-gray-600 group-hover:bg-teal-400 transition-colors"></span>
              kuck.lu
              <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
            </a>
          </li>
          <li class="pt-2">
            <a href={getLocalizedPath('/politique-de-confidentialite', locale)} class="text-gray-500 hover:text-gray-300 transition-colors text-xs">
              {t('footer.privacy', locale)}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/mentions-legales', locale)} class="text-gray-500 hover:text-gray-300 transition-colors text-xs">
              {t('footer.legal', locale)}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-5">{t('footer.contact', locale)}</h3>
        <address class="not-italic text-sm text-gray-400 space-y-4">
          <!-- Adresse -->
          <div class="flex items-start gap-3">
            <div class="w-8 h-8 rounded-lg bg-gray-800/80 flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <span class="leading-relaxed">{CONTACT.address}</span>
          </div>

          <!-- Email 1 -->
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gray-800/80 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <a href={`mailto:${CONTACT.email1}`} class="hover:text-teal-400 transition-colors">
              {CONTACT.email1}
            </a>
          </div>

          <!-- Email 2 -->
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gray-800/80 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <a href={`mailto:${CONTACT.email2}`} class="hover:text-teal-400 transition-colors">
              {CONTACT.email2}
            </a>
          </div>
        </address>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-800/60 py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-gray-500">
        &copy; {year} Digital Factory Sàrl-s – {t('footer.copyright', locale)}
      </p>
      <div class="flex items-center gap-2 text-xs text-gray-600">
        <span class="inline-flex items-center gap-1.5">
          <span class="w-1.5 h-1.5 rounded-full bg-teal-500 animate-pulse"></span>
          Made in Lëtzebuerg
        </span>
      </div>
    </div>
  </div>
</footer>

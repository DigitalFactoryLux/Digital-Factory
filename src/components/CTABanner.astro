---
interface Props {
  title: string;
  description?: string;
  ctaLabel: string;
  ctaHref: string;
}

const { title, description, ctaLabel, ctaHref } = Astro.props;
---

<section class="relative overflow-hidden py-16">
  <div class="absolute inset-0 bg-gradient-to-r from-mint-100 via-cyan-light/40 to-mint-100"></div>
  <div class="absolute inset-0 lines-pattern opacity-30"></div>

  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">{title}</h2>
    {description && (
      <p class="text-gray-700 mb-8 text-lg">{description}</p>
    )}
    <a href={ctaHref} class="btn-primary text-base">
      {ctaLabel}
    </a>
  </div>
</section>
